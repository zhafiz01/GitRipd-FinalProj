{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017"
	},
	"compileOnSave": true,
	"include": ["src"]
}
